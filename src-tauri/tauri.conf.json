{
  "package": { "productName": "Splitwriter", "version": "0.9.3-beta.4" },
  "build": {
    "beforeDevCommand": "vite --port 5173 --strictPort",
    "beforeBuildCommand": "vite build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "tauri": {
    "windows": [
      {
        "label": "main",
        "title": "Splitwriter",
        "width": 1100,
        "height": 720,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "visible": true
      }
    ],
    "allowlist": {
      "window": { "all": true },
      "fs": { "all": true, "scope": ["**"] },
      "path": { "all": true },
      "dialog": { "open": true, "save": true, "message": true, "confirm": true },
      "shell": { "open": true }
    },
    "security": {
      "csp": "default-src 'self' blob: data: ipc: http://localhost:*; img-src 'self' blob: data: *; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; connect-src http://localhost:* ipc:; frame-src 'self' blob: data:"
    },
    "bundle": {
      "identifier": "com.splitwriter.app",
      "icon": [
        "icons/icon.png"
      ]
    }
  }
}
